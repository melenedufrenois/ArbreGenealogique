{% extends 'base.html.twig' %}

{% block title %}Gérer les générations{% endblock %}

{% block body %}
<div class="row gy-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="mb-0" style="color: white; font-size: 1.75rem;">
                            <i class="fas fa-layer-group"></i> Liste des générations
                        </h1>
                        <p class="text-white-50 mb-0 mt-2">Gérez les générations de votre arbre généalogique</p>
                    </div>
                    <a href="{{ path('generation_new') }}" class="btn btn-light">
                        <i class="fas fa-plus"></i> Nouvelle génération
                    </a>
                </div>
            </div>
            <div class="card-body">
                {% if generations is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-layer-group" style="font-size: 3rem; color: #D1D5DB;"></i>
                        <p class="text-muted mt-3 mb-0">Aucune génération enregistrée</p>
                        <a href="{{ path('generation_new') }}" class="btn btn-primary mt-3">
                            <i class="fas fa-plus"></i> Créer la première génération
                        </a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width: 10%;">Ordre</th>
                                    <th style="width: 50%;">Nom</th>
                                    <th style="width: 25%; text-align: center;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for generation in generations %}
                                    <tr>
                                        <td>
                                            <span class="badge" style="background: linear-gradient(135deg, #4F46E5 0%, #6366F1 100%); color: white; font-size: 1rem; padding: 0.5rem;">
                                                {{ generation.displayOrder }}
                                            </span>
                                        </td>
                                        <td>
                                            <strong>{{ generation.generationName }}</strong>
                                        </td>
                                        <td style="text-align: center;">
                                            <a href="{{ path('generation_edit', {'id': generation.id}) }}" class="btn btn-sm btn-primary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('generation_delete', {'id': generation.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette génération ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ generation.id) }}">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle"></i>
                            <strong>{{ generations|length }}</strong> génération{{ generations|length > 1 ? 's' : '' }} enregistrée{{ generations|length > 1 ? 's' : '' }}
                        </p>
                    </div>

                    <div class="mt-3">
                        <a href="{{ path('family_tree') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à l'arbre
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
