{% extends 'base.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
<div class="row gy-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="mb-0" style="color: white; font-size: 1.75rem;">
                            <i class="fas fa-list"></i> Liste des personnes
                        </h1>
                        <p class="text-white-50 mb-0 mt-2">Gérez tous les membres de votre famille</p>
                    </div>
                    <a href="{{ path('personne_new') }}" class="btn btn-light">
                        <i class="fas fa-user-plus"></i> Ajouter
                    </a>
                </div>
            </div>
            <div class="card-body">
                {% if personnes is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-users" style="font-size: 3rem; color: #D1D5DB;"></i>
                        <p class="text-muted mt-3 mb-0">Aucune personne enregistrée</p>
                        <a href="{{ path('personne_new') }}" class="btn btn-primary mt-3">
                            <i class="fas fa-user-plus"></i> Ajouter la première personne
                        </a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width: 40%;">Prénom</th>
                                    <th style="width: 40%;">Nom</th>
                                    <th style="width: 20%; text-align: center;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for personne in personnes %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #4F46E5 0%, #6366F1 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600;">
                                                    {{ personne.prenom[0:1]|upper }}
                                                </div>
                                                <div>
                                                    <strong>{{ personne.prenom }}</strong>
                                                    {% if personne.mort %}
                                                        <span class="badge badge-danger ms-2">
                                                            <i class="fas fa-cross"></i> Décédé
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>{{ personne.nom }}</strong>
                                        </td>
                                        <td style="text-align: center;">
                                            <div class="d-inline-flex gap-2">
                                                <a href="{{ path('personne_edit', {'id': personne.id}) }}"
                                                class="btn btn-sm btn-primary"
                                                title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <form method="post"
                                                    action="{{ path('personne_delete', {'id': personne.id}) }}"
                                                    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ personne.fullName }} ? Cette action est irréversible.');"
                                                    style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle"></i>
                            <strong>{{ personnes|length }}</strong> personne{{ personnes|length > 1 ? 's' : '' }} enregistrée{{ personnes|length > 1 ? 's' : '' }}
                        </p>
                    </div>

                    <div class="mt-3">
                        <a href="{{ path('family_tree') }}" class="btn btn-secondary">
                            <i class="fas fa-project-diagram"></i> Retour à l'arbre
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}